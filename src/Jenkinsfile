def sitePackageDir = "env/lib/python3.6/site-packages"
def image = 'jmpcba/hc_infra_build'

docker.image(image).inside {
    stage('Clean Up'){
        cleanWs()
    }
    stage('Clone'){
        checkout scm
    }

    stage('Build') { 
        echo "#########################"
        echo "# BUILDING DEPENDENCIES #"
        echo "#########################"
        sh "python3 -m venv env"
        sh """. env/bin/activate
        python3 -m pip install -r requirements.txt
        """
        
        sh "cp src/* ${sitePackageDir}"
        dir(sitePackageDir){
            sh "zip -qr9 function.zip ."
            sh "mv function.zip ${WORKSPACE}"
        }
    }

    stage('Deploy') {
        echo "####################"
        echo "# UPLOADING TO AWS #"
        echo "####################"  
            withAWS(credentials: 'AWS CREDENTIALS', region: 'us-east-1') {
            sh """. env/bin/activate
            aws s3 cp function.zip s3://jmpcba-lambda/function.zip
            aws lambda update-function-code --function-name HC_backend_lambda --s3-bucket jmpcba-lambda --s3-key function.zip
            deactivate"""
        }
    }
}