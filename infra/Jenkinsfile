node {
    stage('Clone'){
        git credentialsId: 'GIT', url: 'https://github.com/jmpcba/HC.git'
    }

    stage('Plan') {
        echo "##################"
        echo "# TERRAFORM PLAN #"
        echo "##################"
        
        dir('infra') {
            withCredentials([string(credentialsId: 'TF_VAR_db_password', variable: 'TF_VAR_db_password')]) {
                ansiColor('xterm') {
                        sh '''
                        set +x
                        terraform version
                        terraform plan
                        '''
                }
            }
        }
    }
}